pipeline {


    agent any
	
	tools {   
		   jdk "myjava"
			maven "mymaven"
		  }
		  
		  
		  stages {
		  
		        stage('Compile_job')
				   { 
				      steps 
					  {      
					    git 'https://github.com/edureka-git/DevOpsClassCodes.git'
						sh "mvn compile"
					  }
				   }
				stage('Code_Review')
					{
						steps	
						 { 
						   git 'https://github.com/edureka-git/DevOpsClassCodes.git'
						   sh "mvn pmd:pmd"
						  }
					}
				stage('Unittest')
					{
						steps	
						 { 
						   git 'https://github.com/edureka-git/DevOpsClassCodes.git'
						   sh "mvn test"
						  }
					}	
				stage('Package')
					{
						steps	
						 { 
						   git 'https://github.com/edureka-git/DevOpsClassCodes.git'
						   sh "mvn package"
						  }
					}	
				}	
		}		
					
					
			
