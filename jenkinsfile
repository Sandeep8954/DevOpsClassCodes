pipeline {

       agent any
	
	tools {   
		   jdk "myjava"
			maven "mymaven"
		  }
		  
		  stages {
		         stage('Compile')
				   { 
				      steps 
					  {      
					    git 'https://github.com/Sandeep8954/DevOpsClassCodes.git'
						sh "mvn compile"
					  }
				   }
				stage('Code_Review')
					{
						steps	
						 { 
						   git 'https://github.com/Sandeep8954/DevOpsClassCodes.git'
						   sh "mvn pmd:pmd"
						  }
					}
				stage('Unittest')
					{
						steps	
						 { 
						   git 'https://github.com/Sandeep8954/DevOpsClassCodes.git'
						   sh "mvn test"
						  }
					}	
				stage('Matric_Check')
					{
						steps	
						 { 
						   git 'https://github.com/Sandeep8954/DevOpsClassCodes.git'
						   sh "mvn cobertura:cobertura -Dcobertura.report.format=xml"
						  }
					}		
				stage('Package')
					{
						steps	
						 { 
						   git 'https://github.com/Sandeep8954/DevOpsClassCodes.git'
						   sh "mvn package"
						  }
					}	
				}	
		}		
